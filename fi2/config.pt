    }
    text = "oooooo!";
    color = { 0,1,0,1};
}

test1 : vertical_container {
    geom {
        w=1200;
        h=800;
    }
    sub {
        : horizontal_container {
            geom {
                w=100%;
                h=200;
            }

            sub {
                : myButton {text="Foo!";}
                : myButton {
                    text="Exit";
                    onClick {
                        function = ExitClick;
                    }
                }
